{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha"
    ]
  },
  "include": [
    "index.ts",
    "ngx-uploader.ts",
    "src/ngx-uploader/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
